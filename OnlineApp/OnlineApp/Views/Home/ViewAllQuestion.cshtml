@model IEnumerable<OnlineApp.Models.Question>

@{
    ViewBag.Title = "ViewAllQuestion";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>ViewAllQuestion</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.qu_text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.opA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.opB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.opC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.opD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.cat_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.qu_text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.opA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.opB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.opC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.opD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.cat_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditQuestion", new { id = item.qu_id , @class = "btn btn-warning"}) |
            @using (Html.BeginForm("DeleteConfirmed", "Home", new { id = item.qu_id }, FormMethod.Post))
            {
                @Html.Hidden("id", item.qu_id)
                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');" />
            }
        </td>
    </tr>
}

</table>
