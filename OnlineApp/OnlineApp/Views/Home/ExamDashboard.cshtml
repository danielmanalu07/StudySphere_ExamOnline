@model List<OnlineApp.Models.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ExamDashboard</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-image: url("/Content/Image/ExamDashboard.jpg");
            background-size: cover;
        }

        .category-box {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .center-text {
            text-align: center;
        }

        .right-align {
            text-align: right;
        }
    </style>
</head>
<body>
    @if (ViewBag.error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @ViewBag.error
        </div>
    }
    @using (Html.BeginForm())
    {
        <div class="container mt-5 pt-lg-5">
            <div class="row">
                <div class="col-12 center-text">
                    <h1 class="text-white m-4">Enter Room Number</h1>
                </div>
                <div class="col-12 right-align">
                    <a class="btn btn-primary" href="@Url.Action("LogoutSt", "Home")">Logout</a>
                </div>
            </div>

            <input type="text" id="room" name="room" placeholder="Room Number" class="form-control mt-3" />

            <input type="submit" value="Submit" class="btn btn-info mt-3 form-control" />
        </div>
    }
    <div class="container mt-5">
        <div class="row justify-content-center">
            @foreach (var category in Model)
            {
                <div class="col-md-6">
                    <div class="category-box">
                        <h2 class="text-center">Course Name: @category.cat_name</h2>
                        <p class="text-center">Code : @category.cat_encrypted_string</p>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
