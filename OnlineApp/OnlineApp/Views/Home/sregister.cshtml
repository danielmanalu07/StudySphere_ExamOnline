@model OnlineApp.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Student Registration</title>
</head>
<body>
    <div class="container">
        @if (ViewBag.msg != null)
        {
            <div class="alert alert-danger">
                <strong>Error:</strong> @ViewBag.msg
            </div>
        }
        <h2>Student Registration</h2>
        <hr />
        @using (Html.BeginForm("sregister", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.st_name, new { @class = "form-label" })
                @Html.TextBoxFor(x => x.st_name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.st_password, new { @class = "form-label" })
                @Html.PasswordFor(x => x.st_password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Image", new { @class = "form-label" }) <br />
                <input type="file" class="form-control-file" name="img" />
            </div>
            <input type="submit" value="Register Now!" class="btn btn-primary form-control mt-3" />
        }
    </div>
</body>
</html>
