@model IEnumerable<StudySpehere_Exam.Models.CategoryQuiz>;
<style>
	/* Tambahan style untuk memberikan margin pada tabel */
	.table-container {
		max-width: 800px;
		margin: 0 auto;
		margin-top: 50px;
	}
</style>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-12">
				<div class="d-flex justify-content-between align-items-center">
					<h1 class="mb-0">Daftar Category</h1>
					<a asp-action="Dashboard" asp-controller="Admin" class="btn btn-primary">Back</a>
				</div>
			</div>
			<div class="table-container">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th scope="col">Nama Kategori</th>
							<th scope="col">Description</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var cat in Model)
						{
							<tr>
								<td>@cat.Name</td>
								<td>@cat.Description</td>
								<td class="action-icons">
									<a asp-action="Edit">
										<i class="far fa-edit" title="Edit"></i>
									</a>
									<form asp-action="Delete" asp-controller="Teacher" method="post">
										<input type="hidden" name="id" value="" />
										<button type="submit" class="btn-link" onclick="return confirm('Are you sure you want to delete this student?')">
											<i class="far fa-trash-alt" title="Delete"></i>
										</button>
									</form>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
