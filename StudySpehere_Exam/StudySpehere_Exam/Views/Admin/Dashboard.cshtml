@model StudySpehere_Exam.Models.Admin;

<div class="row">
    <!-- Header Section -->
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0">Welcome @Model.Username!</h1>
            <a asp-action="Logout" asp-controller="Admin" onclick="return confirm('Are you sure you want to leave this system?')" class="btn btn-primary">Logout</a>
        </div>
    </div>
</div>

<div class="row mt-4">
    <!-- Sidebar Section -->
    <div class="col-md-3">
        <div class="bg-light p-4 mb-4">
            <h4>Manage Category Quiz</h4>
            <hr>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Create" asp-controller="CategoryQuiz">Create</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="CategoryQuiz">List Category Quiz</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-3">
        <div class="bg-light p-4 mb-4">
            <h4>Manage Question</h4>
            <hr>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="#">Create</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">List Question</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-3">
        <div class="bg-light p-4 mb-4">
            <h4>Result Quiz</h4>
            <hr>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="#">List Result Data</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Approve Result Data</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-3">
        <div class="bg-light p-4 mb-4">
            <h4>List Student</h4>
            <hr>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="#">List Student Data</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">List Ranking Student</a>
                </li>
            </ul>
        </div>
    </div>
</div>
